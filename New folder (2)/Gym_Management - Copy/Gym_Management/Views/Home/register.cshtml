@model Gym_Management.Models.trainee
@{
    ViewBag.Title = "Trainee login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <style>
            body {
                background-image: url('../../Content/image/banner.jpg');
                background-size: cover;
            }

            a:hover {
                color: white !important;
                text-decoration: none;
            }

            a {
                color: navy !important;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-transparent">
            <a class="navbar-brand" style="color:navy; font-family:'B';font-size:42px" href="#">GYM & FITNESS</a>
        </nav>

        <div class="row" style="margin-top:50px">
            <div class="col-md-1"></div>
            <div class="col-md-6">

                <div class="container" style="background-color: white; border-radius: 20px; padding: 50px; background: rgba(256, 256, 256, 0.5) ">
                    <h1 style="text-align:center">Registration</h1><hr />
                <form>
                    <div class="form-group" style="padding:20px;margin-left:-30px; width: 500px; margin-top:-20px ">
                        @Html.LabelFor(model => model.trainee_name, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.trainee_name, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" style="padding:20px;margin-top:-40px;margin-left:-30px; width: 500px">
                        @Html.LabelFor(model => model.trainee_contact, "Contact", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(x => x.trainee_contact, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>


                    <div class="form-group" style="padding:20px;margin-top:-40px;margin-left:-30px; width: 500px">
                        @Html.LabelFor(model => model.trainee_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(x => x.trainee_password, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group" style="padding:20px;margin-top:-40px;margin-left:-30px; width: 500px">
                        @Html.LabelFor(model => model.trainee_Gender, "Gender:", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            Male
                            @Html.RadioButtonFor(model => model.trainee_Gender, "Male")
                            Female
                            @Html.RadioButtonFor(model => model.trainee_Gender, "Female")

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-top: -40px; width: 100%">Login</button>

                </form>

                </div>
                @if (ViewBag.msg != null)
                {

                    <div style="margin-left:80px;width:420px" class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.msg
                    </div>
                }

            </div>


            <div class="col-12 col-md-4" style="margin-top:10px">
                <div class="card" style=" border-top-right-radius: 40px; border-radius: 40px; background: rgba(256, 256, 256, 0.7); ">

                    <div class="card-body">
                        <center>  <i class="fas fa-user-ninja" style="font-size:70px; color:navy; text-align:center"></i></center><br>
                        <center>
                            <button class="btn btn-outline-primary">
                                @Html.ActionLink("Back To Traineelog", "Traineelog", "Home")
                            </button>
                        </center>
                    </div>
                </div>
                <br>

            </div>
        </div>

    </body>
</html>
}