@model Gym_Management.Models.Membership

@{
    ViewBag.Title = "Register1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>
        body {
            background-image: url('../../Content/image/HOME_BG.jpg');
            background-size: cover;
        }
    </style>
    <br />
    <div>

        <h2 style="color:white;">Select Membership by Membership ID</h2>
        <div class="form-group" style="color:white;background-color:black;width:500px!important;margin-left:50px;">
            @Html.LabelFor(model => model.M_id, "MembershipID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.M_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.M_id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" style="margin-left:180px;margin-top:10px;">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>



}
<br />
<br />
<br />
<br />
<br />
<div style="width:500px;background-color:black;height:150px;margin-top:-160px;margin-left:-20px;border:2px solid white;"></div>
<br />
<div style="color:white;background-color:black;width:500px!important;margin-left:-20px;border:2px solid white;">
    <h2 style="color:white;">Available Memberships: </h2><hr />
    <table class="table">
        <tr>
            <th style="text-align:center">
                Membership ID
            </th>
            <th style="text-align:center">
                Membership Package
            </th>
            <th style="text-align:center">
                Membership Fee
            </th>


        </tr>

        @foreach (var item in ViewData["list"] as List<Gym_Management.Models.Membership>)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.M_id)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.M_Package)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.M_Fee)
                </td>

            </tr>
        }

    </table>
</div>
