@model Gym_Management.Models.equipment

@{
    ViewBag.Title = "Equipments";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="row">

        <div class="col-md-2">
            <div style=" background-color: #1f5f6f; height:100vh ">
                <ul style="margin-top:0px;  text-decoration:none; list-style-type:none;text-align:left; padding:0px">
                    <br />
                    <li style="font-size:20px;color:white; margin:10px" class="active">
                        <i class="fa fa-tachometer" aria-hidden="true"></i>
                        @Html.ActionLink("DASHBOARD", "Welcome", "Home")
                    </li>
                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-life-ring" aria-hidden="true"></i>
                        @Html.ActionLink("TRAINER", "Trainer", new { @class = "list-group-item" })
                    </li>
                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-users" aria-hidden="true"></i>
                        @Html.ActionLink("TRAINEE", "TRAINEE", new { @class = "list-group-item" })
                    </li>
                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                        @Html.ActionLink("EQUIPMENTS", "EQUIPMENTS", new { @class = "list-group-item" })
                    </li>
                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-cutlery" aria-hidden="true"></i>
                        @Html.ActionLink("CHART", "CHART", new { @class = "list-group-item" })
                    </li>

                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-building-o" aria-hidden="true"></i>
                        @Html.ActionLink("BRANCH", "Gym_Branch_Index", new { @class = "list-group-item" })
                    </li>


                    <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        @Html.ActionLink("LOGOUT", "index", new { @class = "list-group-item" })
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-horizontal">


                        <div style="color: black; background: rgba(256, 256, 256, 0.7); padding: 10px; border: 1px solid white; margin-top:55px">
                            <h2 style="color:black">Add New Equipments: </h2>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.eq_name, "Equipment Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.eq_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.eq_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.eq_tra_id, "Trainer ID", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.eq_tra_id, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.eq_tra_id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="ADD" class="btn btn-primary" style="width:100%" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <table class="table table-responsive" style="color: black; background: rgba(256, 256, 256, 0.7);  border: 1px solid white; ">

                        <h2 style="color:white;margin-top:30px">Equipment Records</h2>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Equipment Name</th>
                                <th>Trainer Name</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewData["list"] as List<Gym_Management.Models.equipment>)
                            {
                                <tr>
                                    <td style="text-align:center">@item.eq_id</td>
                                    <td style="text-align:center">@item.eq_name</td>
                                    <td style="text-align:center">@item.trainer.trainer_name</td>

                                    <td style="text-align:center">
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Equipment_Edit",new {id=item.eq_id })">
                                            Edit Equipment
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>


                    </table>
                </div>

            </div>


        </div>



    </div>
}


