                    @Html.LabelFor(model => model.trainer_name, "Trainer_Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="margin-left: 150px;margin-top:-30px ">
                        @Html.EditorFor(model => model.trainer_name, new { htmlAttributes = new { @class = "form-control" } })
