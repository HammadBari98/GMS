
@model Gym_Management.Models.trainer

@{
    ViewBag.Title = "Trainee";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="row">

    <div class="col-12 col-md-2">
        <div style=" background-color: #1f5f6f; height: 100vh ">
            <ul style="margin-top:0px;  text-decoration:none; list-style-type:none;text-align:left; padding:0px">
                <br />
                <li style="font-size:20px;color:white; margin:10px" class="active">
                    <i class="fa fa-tachometer" aria-hidden="true"></i>
                    @Html.ActionLink("DASHBOARD", "Welcome2", "Home")
                </li>

                <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                    <i class="fa fa-life-ring" aria-hidden="true"></i>
                    @Html.ActionLink("PROFILE", "Trainer_Proifle", new { @class = "list-group-item" })
                </li>
                <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    @Html.ActionLink("TRAINEE RECORD", "Trainee_Record_Trainer", new { @class = "list-group-item" })
                </li>
                <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                    <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                    @Html.ActionLink("ABOUT", "Contact", new { @class = "list-group-item" })
                </li>

                <li style="font-size: 20px; color: white; margin-top: 10px; margin: 10px">
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                    @Html.ActionLink("LOGOUT", "index", new { @class = "list-group-item" })
                </li>
            </ul>
        </div>
    </div>
    <div class="col-12 col-md-8">

        <h1 style="margin-left: 50px;margin-top:30px; color:white">TRAINEE RECORD</h1>
                
               <table class="table table-responsive"  style="color: black; background: rgba(256, 256, 256, 0.7); width: 680px !important; margin-left: 50px; border: 1px solid white; margin-top: 30px ">
>
            <thead>
                    <tr>
                        <th style="text-align:center">ID</th>
                        <th style="text-align:center">Trainee Name</th>
                        <th style="text-align:center">Contact</th>
                        <th style="text-align:center">Details</th>
                    </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["list"] as List<Gym_Management.Models.student_trainer>)
                {
                    <tr>
                        <td style="text-align:center">@item.trainee.trainee_id</td>
                        <td style="text-align:center">@item.trainee.trainee_name</td>
                        <td style="text-align:center">@item.trainee.trainee_contact</td>

                        <td style="text-align:center">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("trainee_details2",new {id=item.trainee.trainee_id })"> View trainee details
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

