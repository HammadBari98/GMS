@model Gym_Management.Models.trainee
@{
    ViewBag.Title = "Trainee login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <style>
            body {
                background-image: url('../../Content/image/banner.jpg');
                background-size: cover;
            }

            a:hover {
                color: white !important;
                text-decoration: none;
            }

            a {
                color: navy !important;
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-transparent">
            <a class="navbar-brand" style="color:navy; font-family:'B';font-size:42px" href="#">GYM & FITNESS</a>
        </nav>

        <div class="row" style="margin-top:50px">
            <div class="col-md-1"></div>
            <div class="col-md-6">

                <div class="container" style="background-color: white; border-radius: 20px; padding: 50px; background: rgba(256, 256, 256, 0.5) ">
                    <h1 style="text-align:center">Trainee Login</h1><hr />
                    <form>
                        <div class="form-group" style="padding:20px;margin-left:-30px; width: 500px; margin-top:-20px ">
                            @Html.LabelFor(model => model.trainee_name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.trainee_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.trainee_name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" style="padding:20px;margin-top:-40px;margin-left:-30px; width: 500px">
                            @Html.LabelFor(model => model.trainee_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.trainee_password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.trainee_password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: -40px; width: 100%">Login</button>

                    </form>

                </div>
                <div style="margin-top:-50px;margin-left:150px">
                    <p style="color:white;">Don't have Account? @Html.ActionLink("Register", "register")Now</p>
                </div>
                <p style="color:red">@ViewBag.msg</p>
            </div>
           
            
            <div class="col-12 col-md-4" style="margin-top:10px">
                <div class="card" style=" border-top-right-radius: 40px; border-radius: 40px; background: rgba(256, 256, 256, 0.7); ">

                    <div class="card-body">
                        <center>  <i class="fas fa-user-ninja" style="font-size:70px; color:navy; text-align:center"></i></center><br>
                        <center>
                            <button class="btn btn-outline-primary">
                                @Html.ActionLink("Login As Trainer", "TrainerLog", "Home")
                            </button>
                        </center>
                    </div>
                </div>
                <br>
                <div class="card" style=" border-top-right-radius: 40px; border-radius: 40px; background: rgba(256, 256, 256, 0.7); ">

                    <div class="card-body">
                        <center>  <i class="fas fa-user-lock" style="font-size:70px; color:navy; text-align:center"></i></center><br>
                        <center>
                            <button class="btn btn-outline-primary">
                                @Html.ActionLink("Login as Admin", "Admin", "Home")
                            </button>
                        </center>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
}