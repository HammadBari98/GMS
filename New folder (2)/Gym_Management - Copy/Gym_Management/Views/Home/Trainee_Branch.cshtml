@model Gym_Management.Models.Gym_Branch

@{
    ViewBag.Title = "Register1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>
        body {
            background-image: url('../../Content/image/banner.jpg');
            background-size: cover;
        }
    </style>
    <br />
    <div>

        <h2 style="color:black;">Select Branch by Branch ID</h2>
        <div class="form-group"style="color: black; background: rgba(256, 256, 256, 0.7); width: 680px !important; margin-left: 50px; border: 1px solid white; margin-top: 30px ">
            @Html.LabelFor(model => model.B_id, "Branch ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.B_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.B_id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="padding:20px">
                <div >
                    <center> <input type="submit" value="Submit" class="btn btn-primary" /></center>
                </div>
            </div>
        </div>


       
    </div>
}
<br />
<div style="color: black; background: rgba(256, 256, 256, 0.7); width: 680px !important; margin-left: 50px; border: 1px solid white; margin-top: 30px ">
    <h2 style="color:black;">Available Branches: </h2><hr />
    <table class="table">
        <tr>
            <th style="text-align:center">
                Branch ID
            </th>
            <th style="text-align:center">
                Branch Location
            </th>
            @*<th style="text-align:center">
                Membership Fee
            </th>*@


        </tr>

        @foreach (var item in ViewData["list"] as List<Gym_Management.Models.Gym_Branch_1>)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.B_id)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.B_Name)
                </td>
                

            </tr>
        }

    </table>
</div>
